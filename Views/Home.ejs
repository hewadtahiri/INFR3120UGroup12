<!-- Reservations -->
<section id="reservations">
  <div class="container px-5">
    <h2>Your Reservations</h2>
    <!-- Read Reservations -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Reservation ID</th>
          <th>Customer Name</th>
          <th>Car Model</th>
          <th>Reservation Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% reservations.forEach(reservation => { %>
          <tr>
            <td><%= reservation.id %></td>
            <td><%= reservation.customer_name %></td>
            <td><%= reservation.car_model %></td>
            <td><%= reservation.reservation_date %></td>
            <td>
              <a href="/reservations/edit/<%= reservation.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/reservations/delete/<%= reservation.id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <!-- Create Reservations -->
    <h3>Create New Reservation</h3>
    <form action="/reservations" method="POST">
      <div class="form-group">
        <label for="customer_name">Customer Name</label>
        <input type="text" class="form-control" name="customer_name" required>
      </div>
      <div class="form-group">
        <label for="car_model">Car Model</label>
        <input type="text" class="form-control" name="car_model" required>
      </div>
      <div class="form-group">
        <label for="reservation_date">Reservation Date</label>
        <input type="date" class="form-control" name="reservation_date" required>
      </div>
      <button type="submit" class="btn btn-primary">Create Reservation</button>
    </form>
  </div>
</section>