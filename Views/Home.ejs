<!-- Reservations -->
<section id="reservations">
  <div class="container px-5">
    <!-- Read Reservations -->
    <div class="p-3 mb-5 rounded shadow">
      <h3 class="font-alt mb-2">Reservations</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th style="width: 20%;">Reservation ID</th>
            <th style="width: 20%;">Customer Name</th>
            <th style="width: 20%;">Car Model</th>
            <th style="width: 20%;">Reservation Date</th>
            <th style="width: 20%;">Actions</th>
          </tr>
        </thead>        
        <tbody>
          <% reservations.forEach(reservation => { %>
            <tr>
              <td style="width: 20%;"><%= reservation.id %></td>
              <td style="width: 20%;"><%= reservation.customer_name %></td>
              <td style="width: 20%;"><%= reservation.car_model %></td>
              <td style="width: 20%;"><%= reservation.reservation_date %></td>
              <td style="width: 20%;">
                <a href="/reservations/edit/<%= reservation.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/reservations/delete/<%= reservation.id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- Create Reservations -->
    <div class="p-3 rounded shadow">
      <h3 class="font-alt mb-2">Create New Reservation</h3>
      <form action="/reservations" method="POST">
        <div class="form-group mb-3">
          <label for="customer_name">Customer Name</label>
          <input type="text" class="form-control" name="customer_name" required>
        </div>
        <div class="form-group mb-3">
          <label for="car_model">Car Model</label>
          <input type="text" class="form-control" name="car_model" required>
        </div>
        <div class="form-group mb-3">
          <label for="reservation_date">Reservation Date</label>
          <input type="date" class="form-control" name="reservation_date" required>
        </div>
        <button type="submit" class="btn btn-primary">Create Reservation</button>
      </form>
    </div>
  </div>
</section>