<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Theme CSS -->
    <link href="/CSS/Stylesheet.css" rel="stylesheet">
    <!-- Theme Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&amp;display=swap" rel="stylesheet">
  </head>
  
  <body id="page-top">
    <%- include("../Partials/Navigation") %>

    <!-- Breaks for formatting -->
    <br><br><br><br>

    <main class="container">
      <div class="row">
        <div class="offset-md-4 col-md-4">
          <h1>Login with Username</h1>
          <form method="post" autocomplete="off">
            <!-- Login Form -->
            <fieldset class="form-group">
              <label for="username"></label>
              <input type="text" class="form-control"
              name="username"
              placeholder="Enter your username"
              id="username" required autofocus>
            </fieldset>

            <fieldset class="form-group">
              <label for="password"></label>
              <input type="password" class="form-control"
              name="password"
              placeholder="Enter your password"
              id="password" required>
              or
              <a href="/register"> Register Here</a>
            </fieldset>
            
            <br>
            <fieldset class="form-group-right">
              <input type="submit" class="btn btn-success"
              value="Login">
              <a href="/">
                <input type="button" class="btn btn-warning" value="Cancel">
              </a>
            </fieldset>

            <!-- Breaks for formatting -->
            <br><br><br>

            <!--Google Login Form-->
            <h1> Login with Google</h1>
            <fieldset class="form-group-right">
                <a href="#!">
                <input type="button" class="btn btn-warning" value="Google Login">
                </a>
            </fieldset>
          </form>
        </div>
      </div>
    </main>

    <!-- Breaks for formatting -->
    <br><br><br><br><br> 
    <br><br><br><br><br>
    <%- include("../Partials/Footer") %>

    <!-- JavaScript -->
    <script src="/JavaScript/Scripts.js"></script>
    <!-- Passes reservation data to JavaScript. -->
    <script>window.reservations = <%= JSON.stringify(reservations) %>;</script>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
  </body>
</html>